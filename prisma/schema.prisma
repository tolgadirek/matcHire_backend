generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  firstName   String
  lastName    String
  email       String   @unique
  password    String
  role        String // "seeker" veya "employer"
  companyName String?
  createdAt   DateTime @default(now())
  jobs        Job[]   @relation("UserToJobs")
}

model UserCv {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  filePath     String // uploads/cv/<userId>/<jobId>/<cvName>.pdf (disk yolu)
  originalName String
  mimeType     String
  size         Int
  job          Job      @relation("JobToUserCvs", fields: [jobId], references: [id])
  jobId        String   @db.ObjectId
  updatedAt    DateTime @updatedAt
  createdAt    DateTime @default(now())
  similarity   Float?
}

model Job{
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  CVs         UserCv[] @relation("JobToUserCvs")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String   @db.ObjectId
  user        User     @relation("UserToJobs", fields: [userId], references: [id])
}